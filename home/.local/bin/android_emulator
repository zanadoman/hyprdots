#!/bin/bash

emulator \
    -accel on \
    -avd $(emulator -list-avds | fuzzel -p 'ï…»  ' -l 5 -w 20 -d) \
    -partition-size 128000 \
    -cores $(lscpu | grep -Po 'Core\(s\) per socket:\s+\K\d+') \
    -gpu host \
    -use-host-vulkan \
    -memory $(free -m | grep -Po 'Mem:\s+\K\d+') \
    -camera-front emulated \
    -camera-back webcam0
