#!/bin/bash

pwd="$HOME/Projects/korpus3d/"
killall 'npm run start'
killall 'npm run watch'
hyprctl dispatch -- exec [workspace special silent] $TERMINAL -D "$pwd" -e npm run watch
hyprctl dispatch -- exec [workspace special silent] $TERMINAL -D "$pwd" -e npm run start
hyprctl dispatch exec $BROWSER http://localhost:8080/index.html
