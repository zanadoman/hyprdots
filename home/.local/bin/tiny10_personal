#!/bin/bash

qemu-system-x86_64 -bios /usr/share/ovmf/x64/OVMF.4m.fd -hda "$HOME/Qemu/tiny10_personal.img" -accel kvm -cpu host -smp $(nproc) -m $(expr $(free -m | grep -Po 'Mem:\s+\K\d+') / 5)M -display sdl -audiodev pipewire,id=snd0 -device intel-hda -device hda-duplex,audiodev=snd0 -nic user,hostfwd=tcp::2222-:22
