#!/bin/bash

iso_directory="$HOME/Qemu"
hda_directory="$iso_directory/Linux"

qemu-system-x86_64 \
    -accel kvm \
    -boot menu=on \
    $(for iso in "$iso_directory/"*.iso; do echo "-drive file=$iso,media=cdrom"; done) \
    -drive file="$hda_directory/$(find "$hda_directory/" -type f -printf '%P\n' | fuzzel -p 'î¯†  ' -l 5 -w 20 -d)" \
    -cpu host \
    -smp 4 \
    -device virtio-vga \
    -m 4G \
    -display sdl \
    -audiodev pipewire,id=snd0 \
    -device intel-hda \
    -device hda-duplex,audiodev=snd0 \
    -device qemu-xhci,id=xhci \
    -device usb-tablet,bus=xhci.0 \
    -nic user,hostfwd=tcp::2222-:22
